{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "name": "Promotion"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "progresses": {
      "collection": "process",
      "via": "promotion"
    },
    "subtasks": {
      "collection": "subtask",
      "via": "promotion"
    },
    "user": {
      "via": "promotions",
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
